<idea-plugin>
    <!-- Unique identifier of the plugin. -->
    <id>com.flutterplugin.newfeature</id>

    <!-- Public plugin name -->
    <name>FlutterCreateNewFeature</name>

    <!-- Vendor information -->
    <vendor email="michagersting@sinovo.de" url="https://www.sinovo.de/">Sinovo</vendor>

    <!-- Plugin description -->
    <description>Erstellt eine neue Ordnerstruktur für ein Flutter-Feature mit vorgegebenen Dart-Dateien.</description>

    <!-- Product and plugin compatibility -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points -->
    <actions>
        <action id="NewFeatureAction" class="com.example.plugin.NewFeatureAction" icon="/icons/new_feature_icon.png" text="Neues Feature" description="Erstellt eine neue Ordnerstruktur für ein Feature">
            <add-to-group group-id="NewGroup" anchor="last" />
        </action>
    </actions>

    <!-- URL to your plugin's icon for the IntelliJ Plugin Store -->
    <icon>icons/pluginIcon.svg</icon>
</idea-plugin>
